{{#if errors}} {{#each errors}}
<div class="alert alert-danger">
  {{msg}}
</div>
{{/each}} {{/if}}
<form method="post" action="/messages/showMessages">

  <div class="row align-items-center justify-content-center">

    <div class="col-4">
      <div class="row align-items-center justify-content-center">
        <img src="/images/roche-logo-vector70.png">
      </div>
      <div class="form-group">
        <label class="lead">Username</label>
        <input type="text" class="form-control" placeholder="Username" name="username" />
      </div>
      <div class="form-group">
        <label class="lead">Password</label>
        <input type="password" class="form-control lead" placeholder="Password" name="password" />
      </div>
      <button type="submit" class="btn btn-default btn-primary">Submit</button>
    </div>
  </div>
</form>